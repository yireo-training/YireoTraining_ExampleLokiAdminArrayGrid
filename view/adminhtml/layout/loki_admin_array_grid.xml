<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <update handle="loki_admin_components_grid"/>

    <body>
        <referenceContainer name="content">
            <block
                name="loki_admin_example_array_grid.grid"
                template="Loki_AdminComponents::grid.phtml">
                <arguments>
                    <argument name="provider" xsi:type="string">YireoTraining\ExampleLokiAdminArrayGrid\Provider\ArrayProvider</argument>
                    <argument name="hide_actions" xsi:type="boolean">true</argument>
                    <argument name="columns" xsi:type="array">
                        <item name="package_name" xsi:type="array">
                            <item name="cell_template" xsi:type="string">YireoTraining_ExampleLokiAdminArrayGrid::grid/cell/code.phtml</item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
